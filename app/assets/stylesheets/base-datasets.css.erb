/* =form */
 
  form { 
    padding-bottom: 10px; 
  }
  
  form fieldset {
    padding: 0 0 30px;
  }

	legend {
		font-size: 16px;
		padding-bottom: 16px;
		color: #E31937;
	}
  
/* =label */
 
  label { 
    display: block; 
    position: relative; 
  }
  
/* =input */

  .string input, .email input { 
    padding: 10px; 
    margin-bottom: 1em; 
    font-size: 1em;
		font-family: ParisBlack;
    border: 1px solid #cccccc;
		letter-spacing: 1px;
  }
 
 /* =checkbox */
 
  .checkbox label {
    margin-bottom: 0.75em;
  }

 /* =submit */

	input[type="submit"] {
		display: inline-block;
		color: #3f4521;
		line-height: 47px;
		width: 273px;
		font-size: 18px;
		font-family: 'ParisBlack';
		background: url(<%= asset_path "buttons/wide.png" %>) no-repeat center center;
		border: 0;
		cursor: pointer;
	}

 /* =textarea */

  textarea { 
    font-size: 1em; 
    padding: 5px; 
    margin-bottom: 1em; 
    border: 1px solid #cccccc;
  }

/* Tables */

	table { margin-bottom: 14px; }
