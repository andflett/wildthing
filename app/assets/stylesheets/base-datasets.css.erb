/* =form */
 
  form { 
    padding-bottom: 10px; 
  }
  
  form fieldset {
    padding: 0 0 20px;
  }

	legend {
		font-size: 16px;
		padding-bottom: 16px;
		color: #E31937;
	}
  
/* =label */
 
  label { 
    display: block; 
    position: relative; 
  }
  
/* =input */

  .string input, .email input { 
    padding: 10px; 
    margin-bottom: 1em; 
    font-size: 1em;
		font-family: ParisBlack;
    border: 1px solid #cccccc;
		letter-spacing: 1px;
  }
 
 /* =boolean */
 
  .boolean label {
    margin-bottom: 0.75em;
		display: inline-block;
		font-size: 13px;
		padding-left: 10px;
  }

 /* =submit */

	input[type="submit"] {
		display: inline-block;
		color: #3f4521;
		line-height: 67px;
		width: 120px;
		font-size: 15px;
		font-family: 'ParisBlack';
		background: url(<%= asset_path "buttons/highlight_button.png" %>) no-repeat center center;
		border: 0;
		cursor: pointer;
	}
	
	input[type="submit"]:hover {
		color: #ffffff;
	}

 /* =textarea */

  textarea { 
    font-size: 13px;
		font-family: courier; 
    padding: 5px; 
		margin-bottom: 15px;
    border: 1px solid #cccccc;
		-webkit-font-smoothing: antialiased;
  }

/* Tables */

	table { margin-bottom: 14px; }
