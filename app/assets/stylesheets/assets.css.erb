/* Graceful image replacement */

  .ir { position: relative; display: block; overflow: hidden; }
  .ir a { cursor: pointer; }
  .ir span { 
    width: 100%; height: 100%;
    position: absolute; top: 0; left: 0;
    background-repeat: no-repeat;
    background-position: top left;
  }

/* =heading */

	.heading {
		text-align: center;
		margin-bottom: 40px;
	}

	.heading h1 {
		text-align: center;
		font-family: Courier;
		font-weight: normal;
		color: #222;
		font-size: 12px;
		line-height: 46px;
		margin-bottom: 0;
	}
	
	.heading h2 {
		font-size: 32px;
	}

/* =full_panel */
	
	.full_panel {
		margin-bottom: 20px;
		text-align: center;
	}

	.full_panel p {
		padding: 0 100px;
	}
	
	.full_panel p.cta {
		margin-top: 50px;
	}
	
/* =grid_list */

	.grid_list {
		width: 100%;
		overflow: hidden;
		padding: 10px 0 0;
	}

	.grid_list li {
		padding: 0;
		width: 300px;
		float: left;
		margin: 0 30px 30px 0;
		list-style-type: none;
	}
	
	.grid_list li:nth-child(3n+3) {
		margin-right: 0;
	}
	
	.grid_list li h3 {
		margin: 0;
	}
	
	.grid_list li img {
		display: block;
		margin-top: 10px;
	}
	
	.panel .grid_list li {
		width: 227px;
		margin-right: 10px;
	}
	
/*= pull */

	p.pull {
		font-size: 24px; 
		line-height: 32px;
		margin: 0;
		padding: 20px 0 40px;
		font-weight: normal;
		color: #989C2A;
		font-family: ParisBold;
		text-transform: uppercase;
		-webkit-font-smoothing: subpixel-antialiased !important;
	}
	
/*= cta */

	p.cta {
		margin: 0;
		-webkit-font-smoothing: subpixel-antialiased !important;
	}

	.cta a {
		display: inline-block;
		color: #3f4521;
		line-height: 47px;
		width: 273px;
		font-size: 18px;
		font-family: 'ParisBlack';
		background: url(<%= asset_path "buttons/wide.png" %>) no-repeat center center;
		text-align: center;
	}

	.cta a:hover,
	.cta a:focus,
	.cta a:active { text-decoration: underline; }