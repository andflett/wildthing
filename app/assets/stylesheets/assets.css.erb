/* Graceful image replacement */

  .ir { position: relative; display: block; overflow: hidden; }
  .ir a { cursor: pointer; }
  .ir span { 
    width: 100%; height: 100%;
    position: absolute; top: 0; left: 0;
    background-repeat: no-repeat;
    background-position: top left;
  }

/* =panel */

	.panel {
		border-top: 1px solid #576027;
		padding: 10px 0 30px;
		width: 465px;
		float: left;
		margin-right: 30px;
		height: auto !important;
		height: 200px;
		min-height: 200px;
	}
	
	.panel:nth-child(2n+2) { margin: 0; }

	.panel h2, .panel h1 {
		text-transform: uppercase;
		font-family: ParisBold;
		margin-bottom: 27px;
		font-size: 28px;
		line-height: 32px;
	}
	
	.panel h2 span {
		display: block;
		color: #cad400;
	}
	
	.full_panel {
		margin-bottom: 20px;
	}

	.full_panel h2 {
		text-align: center;
		font-family: Courier;
		font-weight: normal;
		color: #222;
		font-size: 12px;
		line-height: 35px;
		margin-bottom: 0;
	}

	.full_panel h3 {
		text-align: center;
		color: #989C2A;
		margin-bottom: 30px;
	}

	.full_panel p {
		text-align: center;
		padding: 0 100px;
		font-size: 13px;
		line-height: 24px;
		margin-bottom: 30px;
	}

	.full_panel .cta {
		margin-top: 40px;
	}
	
	.full_panel img {
		display: block;
		margin: 0 0 50px;
	}
	
/* =grid_list */

	.grid_list {
		width: 100%;
		overflow: hidden;
		padding: 10px 0 0;
	}

	.grid_list li {
		padding: 0;
		width: 300px;
		float: left;
		margin: 0 30px 30px 0;
		list-style-type: none;
	}
	
	.grid_list li:nth-child(3n+3) {
		margin-right: 0;
	}
	
	.grid_list li h3 {
		margin: 0;
	}
	
	.grid_list li img {
		display: block;
		margin-top: 10px;
	}
	
	.panel .grid_list li {
		width: 227px;
		margin-right: 10px;
	}
	
/*= cta */

	.cta {
		margin: 0;
	}

	.cta a {
		display: inline-block;
		color: #1a1a1a;
		line-height: 47px;
		width: 273px;
		font-size: 18px;
		font-family: 'ParisBlack';
		background: url(<%= asset_path "buttons/wide.png" %>) no-repeat center center;
	}

	.cta a:hover,
	.cta a:focus,
	.cta a:active { text-decoration: none; color: #ffffff; }