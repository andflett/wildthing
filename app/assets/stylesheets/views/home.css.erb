.section_home.view_index header .container {
	padding-top: 170px;
}

.section_home #pledges {
	width: 400px;
	margin: 0 auto 0;
	text-align: center;
	margin-top: -32px;
	font-family: 'ParisBlack';
}

.section_home #pledge_count {
	font-size: 16px;
	margin-bottom: 36px;
}

.section_home #pledge_count span {
	font-size: 72px;
	color: #cad400;
  display: block;
	line-height: 90px;
}

.section_home #pledge {
	font-size: 18px;
	line-height: 24px;
	margin-bottom: 34px;
}

.section_home #projects {
	margin-bottom: 45px;
}

.section_home #projects ul {
	list-style-type: none;
	padding: 0;
	overflow: hidden;
}

.section_home #projects ul li:last-child {
	margin: 0;
}

.section_home #projects ul li {
	padding: 0 40px;
	width: 400px;
	float: left;
	text-align: center;
}

.section_home #projects ul li img {
	display: block;
	margin-bottom: 10px;
}

.section_home #projects ul li p {
	margin-bottom: 25px;
	font-size: 12px;
}

.section_home #projects ul li h2 {
	margin-bottom: 5px;
}
