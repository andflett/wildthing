.section_home.view_index header .container {
	padding-top: 170px;
}

.section_home #pledges {
	width: 400px;
	margin: 0 auto 0;
	text-align: center;
	margin-top: -32px;
	font-family: 'ParisBlack';
}

.section_home #pledge_count {
	font-size: 16px;
	margin-bottom: 36px;
}

.section_home #pledge_count span {
	font-size: 72px;
	color: #cad400;
  display: block;
	line-height: 90px;
}

.section_home #pledge {
	font-size: 18px;
	line-height: 24px;
	margin-bottom: 34px;
}

.cta {
	margin: 0;
}

 .cta a {
	display: inline-block;
	color: #1a1a1a;
	line-height: 47px;
	width: 273px;
	font-size: 18px;
	font-family: 'ParisBlack';
	background: url(<%= asset_path "buttons/wide.png" %>) no-repeat center center;
}

.section_home .cta a:hover,
.section_home .cta a:focus,
.section_home .cta a:active
{ text-decoration: none; color: #ffffff; }

.section_home #manifesto {
	margin-bottom: 20px;
}

.section_home #manifesto h2 {
	text-align: center;
	font-family: Courier;
	font-weight: normal;
	color: #222;
	font-size: 12px;
	line-height: 35px;
	margin-bottom: 0;
}

.section_home #manifesto h3 {
	text-align: center;
	color: #989C2A;
	margin-bottom: 30px;
}

.section_home #manifesto p {
	text-align: center;
	padding: 0 100px;
	font-size: 13px;
	line-height: 24px;
	margin-bottom: 30px;
}

.section_home #projects {
	margin-bottom: 40px;
}

.section_home #projects ul {
	list-style-type: none;
	padding: 0;
	overflow: hidden;
}

.section_home #projects ul li:last-child {
	margin: 0;
}

.section_home #projects ul li {
	padding: 0 40px;
	width: 400px;
	float: left;
	text-align: center;
}

.section_home #projects ul li img {
	display: block;
	margin-bottom: 10px;
}

.section_home #projects ul li p {
	margin-bottom: 15px;
	font-size: 12px;
}

.section_home #projects ul li h2 {
	margin-bottom: 5px;
}
