.section_projects.view_index .categories {
	list-style-type: none;
	padding: 20px 0 30px 0;
	text-align: center;
}

.section_projects.view_index .categories li {
	display: inline-block;
	font-family: ParisBlack;
	font-size: 28px;
	line-height: 36px;
	margin-right: 20px;
	-webkit-font-smoothing: antialiased;
}

.section_projects.view_index .categories li a {
	color: #222;
}

.section_projects.view_index .categories li a:hover,
.section_projects.view_index .categories li a:focus,
.section_projects.view_index .categories li a:active 
{ color: #989C2A; text-decoration: none; }

.section_projects.view_index .project_category h2 {
	text-align: center;
	font-family: courier;
	color: #222222;
	font-size: 12px;
	line-height: 18px;
}

.section_projects.view_index .project_category {
	padding-top: 30px;
	border-top: 1px dotted #989C2A;
	margin-bottom: 20px;
}

.section_projects.view_index .project_category li {
	min-height: 250px;
}

.section_projects.view_show #primary_content img {
	display: block;
	margin: 0 auto 30px;
}

.section_projects.view_show #primary_content a {
	display: block;
	color: #1A1A1A;
	line-height: 47px;
	width: 225px;
	font-size: 18px;
	font-family: 'ParisBlack';
	background: url(<%= asset_path "buttons/wide.png" %>) no-repeat center center;
	text-align: center;
	margin: 30px auto 0;
}