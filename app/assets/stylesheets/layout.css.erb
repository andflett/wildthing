/*
	White: ffffff
	Black: 1a1a1a
	Green: cad400
	Dark Green: 576027
*/

@media all {

	body { 
		background: #000000;
	}
   
	.container {
		width: 960px; margin: 0 auto; 
	  overflow: hidden; display: block;
	}
	
	/* =header */
	
		header {
			background-color: #ffffff;
			background-image: url("layout/header.png"),
												url("layout/page_background.gif");
			background-repeat: repeat-x, no-repeat;
			background-position: center 232px, center top;
			padding-top: 276px;
		}
		
		header .introduction {
			background: #1a1a1a url(<%= asset_path "layout/secret_stash.gif" %>) no-repeat center top;					
		}
		
		header .container {	
			color: #ffffff;
			overflow: visible;
			padding: 0;
			position: relative;
			padding: 165px 0 40px;
		}
		
		.pledged_true header .container {
			padding-bottom: 20px;
		}
		
		header .branding {
			width: 256px;
			margin: 0 auto;
			position: absolute;
			top: -40px;
			left: 353px;
		}
	
		header .ir {
			width: 256px;
			height: 153px;
			padding: 20px 0 0;
		}
	
		header .branding span {
			background: url("branding/wild_thing_logo.gif") no-repeat;
		}
		
		header .tagline {
			font-family: ParisBlack;
			text-align: center;
			margin: -40px 0 50px 0;
			padding: 0;
			font-size: 18px;
		}
		
		header nav {
			padding-left: 10px;
			position: relative;
		}
		
		header nav ul {
			padding: 0;
			list-style-type: none;
			text-align: center;
		}
		
		header nav ul li {
			padding: 0 20px 0 0;
			margin: 0;
			display: inline-block;
			font-size: 24px;
			text-align: left;
		}
		
		header nav ul li:first-child {
			padding-right: 28px;
		}
		
		header nav ul li a {
			font-family: ParisBlack;
			font-weight: normal;
			color: #ffffff;
			display: block;
		}
		
		header nav ul li a:hover,
		header nav ul li a:active,
		header nav ul li a:focus,
		header nav ul li a.active {
			color: #cad400;
			text-decoration: none;
		}
		
	/* =primary_content */
	
		#primary_content {
			padding: 35px 0 390px;
			background-color: #ffffff;
			background-image: url(<%= asset_path "layout/footer.gif" %>), url("layout/main.gif");
			background-position: center bottom, top center;
			background-repeat: no-repeat, repeat-x;
			position: relative;
			z-index: 10;
		}
		
		#primary_content p {
			-webkit-font-smoothing: antialiased; 
		}
		
	/* =footer */
	
		footer {
			color: #ffffff;
			padding: 10px 0 10px;
			text-transform: uppercase;
			position: relative;
			z-index: 20;
			margin-top: -130px;
		}
		
		footer h2 {
			width: 400px;
			margin-left: 100px;
			margin-bottom: 40px;
			text-align: center;
			color: #cad400;
		}
		
		footer p, footer li { 
			-webkit-font-smoothing: antialiased;
		}
		
		footer p.colophon {
			margin-top: 90px;
			font-size: 12px; 
			margin-bottom: 0;
		}

}
