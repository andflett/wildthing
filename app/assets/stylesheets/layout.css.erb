/*
	White: ffffff
	Black: 1a1a1a
	Green: cad400
	Dark Green: 576027
*/

@media all {

	body { 
		background: #000000;
	}
   
	.container {
		width: 960px; margin: 0 auto; 
	  overflow: hidden; display: block;
	}
	
	/* =header */
	
		header {
			background-color: #ffffff;
			background-image: url("layout/header.png"),
												url("layout/page_background.gif");
			background-repeat: repeat-x, no-repeat;
			background-position: center 232px, center top;
			padding-top: 276px;
		}
		
		header .introduction {
			background: #1a1a1a url(<%= asset_path "layout/secret_stash.gif" %>) no-repeat center top;					
		}
		
		header .container {	
			color: #ffffff;
			overflow: visible;
			padding: 0;
			position: relative;
			padding: 165px 0 30px;
		}
		
		header .branding {
			width: 256px;
			margin: 0 auto;
			position: absolute;
			top: -40px;
			left: 353px;
		}
	
		header .ir {
			width: 256px;
			height: 153px;
			padding: 20px 0 0;
		}
	
		header .branding span {
			background: url("branding/wild_thing_logo.gif") no-repeat;
		}
		
		header nav {
			padding-left: 30px;
		}
		
		header nav ul {
			padding: 0;
			list-style-type: none;
			text-align: center;
		}
		
		header nav ul li {
			padding: 0 25px 0 0;
			margin: 0;
			display: inline-block;
			font-size: 24px;
			text-align: left;
		}
		
		header nav ul li:first-child {
			padding-right: 40px;
		}
		
		header nav ul li a {
			font-family: ParisBlack;
			font-weight: normal;
			color: #ffffff;
			display: block;
		}
		
	/* =primary_content */
	
		#primary_content {
			padding: 45px 0 400px;
			background-color: #ffffff;
			background-image: url(<%= asset_path "layout/footer.gif" %>), url("layout/main.gif");
			background-position: center bottom, top center;
			background-repeat: no-repeat, repeat-x;
		}
		
		#primary_content p {
			-webkit-font-smoothing: antialiased; 
		}
		
	/* =footer */
	
		footer {
			color: #ffffff;
			padding: 20px 0 20px;
		}

}
