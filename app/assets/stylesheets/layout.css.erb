/*
	White: ffffff
	Black: 1a1a1a
	Green: cad400
	Dark Green: 576027
*/

@media all {

	body { 
		background: #000000;
	}
   
	.container {
		width: 960px; margin: 0 auto; 
	  overflow: hidden; display: block;
	}
	
	/* =header */
	
		header {
			background-color: #ffffff;
			background-image: url("layout/header.png"),
												url("layout/page_background.gif");
			background-repeat: repeat-x, no-repeat;
			background-position: center 232px, center top;
			padding-top: 276px;
		}
		
		header .introduction {
			background: #1a1a1a url(<%= asset_path "layout/secret_stash.gif" %>) no-repeat center top;		
		}
		
		header .container {	
			color: #ffffff;
			overflow: visible;
			padding: 0;
			position: relative;
			padding: 90px 0 28px;
		}
		
		header .branding {
			width: 256px;
			margin: 0 auto;
			position: absolute;
			top: -40px;
			left: 353px;
		}
	
		header .ir {
			width: 256px;
			height: 153px;
			padding: 20px 0 0;
		}
	
		header .branding span {
			background: url("branding/wild_thing_logo.gif") no-repeat;
		}
		
	/* =main */
	
		#main {
			padding: 60px 0 400px;
			background-color: #ffffff;
			background-image: url(<%= asset_path "layout/footer.gif" %>),
												url("layout/main.gif");
			background-position: center bottom, center top;
			background-repeat: no-repeat, repeat-x;
		}
		
		#main p {
			-webkit-font-smoothing: antialiased; 
		}
		
	/* =footer */
	
		footer {
			color: #ffffff;
			padding: 20px 0 30px;
		}
		
		footer p { 
			margin: 0; 
		}

}
