/*
	White: f4f1ee
	Green: cad400
	Dark Green: 576027
*/

@media all {

	body { 
		background-color: #f4f1ee;
	}
   
	.container {
		width: 960px; margin: 0 auto; 
	  overflow: hidden; display: block;
	}
	
	/* =header */
	
		header {
			padding: 35px 0 40px;
		}
		
		header .branding {
			width: 325px;
			margin: 0 auto;
		}
	
		header .ir {
			width: 325px;
			height: 101px;
			padding: 0;
		}
	
		header .branding span {
			background: url(<%= asset_path "branding/wild_thing_logo.gif" %>);
		}
		
		header nav {
			padding-top: 5px;
			margin: 0 auto;
			text-align: center;
		}
		
		header nav ul {
			padding: 0;
			list-style-type: none;
		}
		
		header nav li {
			display: inline-block;
			font-size: 28px;
			margin-left: 20px;
			line-height: 30px;
			text-transform: uppercase;
			font-family: ParisBlack;
		}
		
		header nav li span {
			display: block;
			font-size: 20px;
			color: #CAD400;
		}
		
		header nav li a {
			color: #576027;
			text-decoration: none;
		}
		
		header nav li a:hover,
		header nav li a:active,
		header nav li a:focus,
		header nav li a.active {
			color: #cad400;
			text-decoration: none;
		}
		
	/* =main */
	
	#main .intro_panel {
		width: 100%;
		overflow: hidden;
		margin-bottom: 20px;
	}
	
	#main .intro_panel .introduction {
		width: 600px;
		float: left;
	}
	
	#main .intro_panel .cta a {
		width: 200px;
		float: right;
		background: #576027;
		margin-top: 50px;
		padding: 20px;
	}
	
	#main .primary_content {
		border-top: 1px solid #576027;
		padding-top: 15px;
		width: 600px;
		float: left;
	}
	
	#main .secondary_content {
		border-top: 1px solid #576027;
		padding-top: 15px;
		width: 300px;
		float: right;
	}
		
	/* =footer */
	
		footer {
			padding: 10px 0 30px;
			background: #000000;
			color: #ffffff;
		}

}
