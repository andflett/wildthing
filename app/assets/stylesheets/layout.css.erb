/*
	White: f4f1ee
	Green: cad400
	Dark Green: 576027
*/

@media all {

	body { 
		background-color: #f4f1ee;
	}
   
	.container {
		width: 960px; margin: 0 auto; 
	  overflow: hidden; display: block;
	}
	
	/* =header */
	
		header {
			padding: 35px 0 40px;
		}
		
		header .branding {
			float: left;
			width: 325px;
			margin: 0;
		}
	
		header .ir {
			width: 325px;
			height: 101px;
			margin: 0;
			padding: 0;
		}
	
		header .branding span {
			background: url(<%= asset_path "branding/wild_thing_logo.gif" %>);
		}
		
		header nav {
			padding-top: 5px;
			float: right;
			display: inline-block;
		}
		
		header nav ul {
			padding: 0;
			list-style-type: none;
		}
		
		header nav li {
			display: inline-block;
			font-size: 28px;
			margin-left: 15px;
			text-transform: uppercase;
			font-family: LeagueGothicRegular;
		}
		
		header nav li a {
			color: #576027;
			text-decoration: none;
		}
		
		header nav li a:hover,
		header nav li a:active,
		header nav li a:focus,
		header nav li a.active {
			color: #cad400;
			text-decoration: none;
		}
		
	/* =footer */
	
		footer {
			border-top: 1px solid #576027;
			padding: 10px 0 30px;
		}

}
