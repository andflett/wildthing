<section id="projects">
	
	<% if @wild_thing_projects.any? %>
	<ul>
		<% @wild_thing_projects.each do |project| %>
		<li>
			<h2><%= link_to project.title, project.url %></h2>
			<p><%= project.description %></p>
			<% unless project.image.url.nil? %>
				<%= link_to image_tag(project.image), project.url %>
			<% end %>
		</li>
		<% end %>
	</ul>
	<% end %>

	<p>More about <%= link_to "The Nature Film", film_path %></p>
	
</section>

<% if @projects.any? %>
<section class="full_panel">

	<div class="heading">
		<h1>Get involved, go wild</h1>
		<h2>Other wild projects around the web</h2>
	</heading>

	<ul class="grid_list">
		<% @projects.each do |project| %>
		<li>
			<h3><%= link_to project.title, project.url %></h3>
			<p><%= project.description %></p>
			<% unless project.image.url.nil? %>
				<%= link_to image_tag(project.image), project.url %>
			<% end %>
		</li>
		<% end %>
	</ul>

	<p class="cta"><%= link_to "More projects", projects_path %></p>

</section>
<% end %>

<section class="full_panel" id="ideas">

	<div class="heading">
		<h1>Your ideas</h1>
		<h2>How can we re-connect with nature?</h2>
	</div>

	<% if @ideas.any? %>
	<ul>
		<% @ideas.each do |idea| %>
			<%= render "ideas/block" %>
		<% end %>
	</ul>
	<% end %>

	<%= render "ideas/form" %>

</section>
