<section id="projects">
	
	<% if @wild_thing_projects.any? %>
	<ul class="grid grid_two">
		<% @wild_thing_projects.each do |project| %>
		<li>
			<h2>
				<% unless project.body.blank? %>
					<%= link_to project.title, project_path(project) %>
				<% else %>
					<%= link_to project.title, project.url %>
				<% end %>
			</h2>
			<p><%= project.description %></p>
			<% unless project.image.url.nil? %>
							
				<% unless project.body.blank? %>
					<%= link_to image_tag(project.image), project_path(project) %>
				<% else %>
					<%= link_to image_tag(project.image), project.url %>
				<% end %>
				
			<% end %>

		</li>
		<% end %>
	</ul>
	<% end %>
	
	<% if @projects.any? %>
	<ul class="grid">
		<% @projects.each do |project| %>
		<li>
			<h3><%= link_to project.title, project.url %></h3>
			<p><%= project.description %></p>
		</li>
		<% end %>
	</ul>
	<% end %>
	
	<p class="cta"><%= link_to "How to get wild", projects_path %></p>

</section>

<% if @inspirations.any? %>
<section class="full_panel" id="inspiration">

	<div class="heading">
		<h1>Inspiration</h1>
		<h2>It's time to re-connect with nature</h2>
	</div>
	
	<ul class="grid grid_film">
		
		<% @inspirations.each do |inspiration| %>
			<%= render :partial => "inspirations/block", :locals => { :inspiration => inspiration } %>
		<% end %>
		
		<% if @post.present? %>
			<%= render :partial => "posts/block", :locals => { :post => @post } %>
		<% end %>
		
	</ul>

	<p class="cta"><%= link_to "The Nature Film", film_path %></p>

</section>
<% end %>

