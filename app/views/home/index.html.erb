<section class="panel">
	<h2><span>A platform to reconnect kids with wildness</span> Work on a concept / Show your support / Go Wild!</h2>
	<%= image_tag "nature.gif", :alt => "Wild Thing" %>
</section>

<section class="panel">
	<h2><span>The Campaign</span>Inspirations from the Wild</h2>
	<iframe src="http://player.vimeo.com/video/44097760?byline=0&amp;color=aecf1b" width="465" height="260" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
</section>

<section class="panel" id="projects">
	
	<h2>Projects</h2>
	<% if @projects.any? %>
	<ul class="grid_list">
		<% @projects.each do |project| %>
		<li>
			<h3><%= link_to project.title, project_path(project) %></h3>
			<% unless project.image.url.nil? %>
				<%= link_to (image_tag project.image.thumbnail), project_path(project) %>
			<% end %>
		</li>
		<% end %>
	</ul>
	<% end %>
	
</section>