<%= simple_form_for [@pledge] do |f| %>
  
	<%= field_set_tag nil, :class => "auto" do %>
		<%= f.input :name, :input_html => { :"data-placeholder" => "Your name" } %>
		<%= f.input :email, :input_html => { :"data-placeholder" => "Your email address" } %>
	<% end %>

	<%= field_set_tag nil, :class => "actions" do %>
		<%= f.input :subscribed, :label => "Keep me updated" %>
		<%= f.submit :value => "Pledge" %>	
	<% end %>
	
<% end %>
