<%= simple_form_for [@pledge] do |f| %>
  
	<%= field_set_tag nil, :class => "auto inline_form" do %>
		I promise to spend as much time outdoors as I do looking at screens, 
		and, by my advice and example, encourage others to do the same 
	<% end %>

	<%= field_set_tag nil, :class => "auto" do %>
		<%= f.text_field :name, :"data-placeholder" => "Your name" %> <%= f.text_field :name, :"data-placeholder" => "Your email" %>
	<% end %>
	
	<%= f.submit :value => "Pledge" %>
	<%= f.input :subscribed, :label => "Keep me updated with progress" %>
	
  
<% end %>
