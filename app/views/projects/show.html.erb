<div class="intro_panel">
	
	<section class="introduction">
		<h1><%= @project.title %></h1>
		<%= simple_format @project.description %>
	</section>
	
	<p class="cta"><%= link_to "Go to App", @project.url %></p>
	
</div>

<section class="primary_content">
		
	<% unless @project.image.url.nil? %>
		<%= image_tag @project.image.panel %>
	<% end %>
	
	<%= simple_format @project.how_to_get_involved %>
	
</section>

<aside class="secondary_content">
	<h2>Created by</h2>
	
	<p><%= @project.created_by %></p>
	
	<h2>Run your own</h2>
	<p>Things you'll need to hack this project and make your own.</p>
	<ul>
		<li>Toolkit: <a href="">http://www.website.com</a></li>
		<li>Source code: <a href="">http://www.github.com/hithere</a></li>
	</ul>
	
</section>
